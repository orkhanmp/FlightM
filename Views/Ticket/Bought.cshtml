@model List<FlightTicket>

<h2>Bought Tickets</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No tickets bought yet.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Country</th>
                <th>City</th>
                <th>Price</th>
                <th>Hotel</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Country</td>
                    <td>@t.City</td>
                    <td>@t.Price</td>
                    <td>@t.HotelName</td>
                </tr>
            }
        </tbody>
    </table>
}
